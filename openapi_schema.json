{
  "openapi": "3.0.0",
  "info": {
    "title": "Verifiable Stubs APIs",
    "version": "1.0.0",
    "description": "APIs for Doctor Onboarding, Academic Admission, and Insurance Claims"
  },
  "servers": [
    {
      "url": "http://localhost:5000/api/v1",
      "description": "Development Server"
    }
  ],
  "tags": [
    {
      "name": "Doctor Admin",
      "description": "Doctor administration endpoints"
    },
    {
      "name": "Doctor PSV (Professional Verification)",
      "description": "Doctor verification endpoints"
    },
    {
      "name": "Academic Admin",
      "description": "Academic administration endpoints"
    },
    {
      "name": "Academic Verification",
      "description": "Academic verification endpoints"
    },
    {
      "name": "Insurance Admin",
      "description": "Insurance administration endpoints"
    },
    {
      "name": "Insurance Medical Data",
      "description": "Medical data enrichment endpoints"
    },
    {
      "name": "Insurance Claims",
      "description": "Claims review endpoints"
    },
    {
      "name": "Insurance Payout",
      "description": "Payout processing endpoints"
    },
    {
      "name": "Insurance Notification",
      "description": "Notification endpoints"
    }
  ],
  "paths": {
    "/doctors/admin/add": {
      "post": {
        "tags": ["Doctor Admin"],
        "summary": "Add doctors (batch)",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/DoctorSeed"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Doctors added successfully"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "DoctorSeed": {
        "type": "object",
        "properties": {
          "doctor_id": {"type": "string"},
          "name": {"type": "string"},
          "license_number": {"type": "string"},
          "license_status": {"type": "string"},
          "license_expiry": {"type": "string"},
          "degree": {"$ref": "#/components/schemas/Degree"},
          "board_certifications": {
            "type": "array",
            "items": {"$ref": "#/components/schemas/BoardCert"}
          },
          "training": {
            "type": "array",
            "items": {"$ref": "#/components/schemas/Training"}
          },
          "employment_history": {
            "type": "array",
            "items": {"$ref": "#/components/schemas/Employment"}
          }
        }
      },
      "Degree": {
        "type": "object",
        "properties": {
          "degree_name": {"type": "string"},
          "university": {"type": "string"},
          "year_of_passing": {"type": "string"},
          "registration_number": {"type": "string"}
        }
      },
      "BoardCert": {
        "type": "object",
        "properties": {
          "board_name": {"type": "string"},
          "certificate_number": {"type": "string"},
          "valid_till": {"type": "string"}
        }
      },
      "Training": {
        "type": "object",
        "properties": {
          "program_name": {"type": "string"},
          "institution": {"type": "string"},
          "completion_year": {"type": "string"}
        }
      },
      "Employment": {
        "type": "object",
        "properties": {
          "employer_name": {"type": "string"},
          "role": {"type": "string"},
          "years": {"type": "string"}
        }
      }
    }
  }
}
